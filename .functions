    name="*"
  fi

  find . -name $name".yaml" -print -exec ruby -e "require 'yaml'; YAML.parse(File.open('{}'))" \;
}

# Print httpcodes using Node
function httpcodes {
  if ! node -v &> /dev/null
  then 
    nvm use 16 &> /dev/null
  fi

  cmd="require('http').STATUS_CODES"
  if [ "$#" -eq "0" ]; then
    node -p $cmd
  else
    node -p $cmd | grep $1
  fi
}

